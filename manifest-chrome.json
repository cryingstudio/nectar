{
    "name": "Nectar",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "Save Money with ONE click!",
    "permissions": [
      "storage",
      "activeTab"
    ],
    "host_permissions": [
      "https://nectar-db.vercel.app/api/*"
    ],
    "action": { 
      "default_popup": "index.html",
      "default_icon": {
        "16": "Nectar-16.png",
        "32": "Nectar-32.png",
        "48": "Nectar-48.png",
        "128": "Nectar-128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "Nectar-16.png",
      "32": "Nectar-32.png",
      "48": "Nectar-48.png",
      "128": "Nectar-128.png"
    }
  }